/**index.wxss**/
page {
    background: #f6f6f6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .userinfo{
 
  }
  .accountName{
    font-size: 20px;
    width: 100%;
    text-align: center;
  }
  .userinfo, .uploader, .tunnel {
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
  }
  
  .userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
    background-size: cover;
    background-color: white;
  }
  
  
  .van-card{
    box-sizing: border-box;
    margin-top: 10px;
    box-shadow: 1px 1px 1px 1px #ccc;
    border: 2px solid #ccc;
  
  }
  
  .buttons{
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 2px 3px;
  }
  
  .allBills{
    display: flex;
  }
  
  .alls{
    flex: 1;
    text-align: center;
    padding: 3px 5px;
    font-size: 15px;
    background-color: aqua;
  }
  view.van-tabs__line{
      background-color: #fff;
  }

  .dateWrap{
    display: flex;
    justify-content: center;
  }
  .dateWrap button {
    font-size: 16px;
  }