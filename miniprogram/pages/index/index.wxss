/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.name{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  padding: 2px 4px;
}
.userinfo {
  min-height: 180rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 300ms ease;
  padding: 20rpx 0;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}


.van-card{
  box-sizing: border-box;
  margin-top: 10px;
  box-shadow: 1px 1px 1px 1px #ccc;
  border: 2px solid #ccc;

}

.buttons{
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 2px 3px;
}

.allBills{
  display: flex;
}

.alls{
  flex: 1;
  text-align: center;
  padding: 3px 5px;
  font-size: 15px;
  background-color: aqua;
}
.dateWrap{
  display: flex;
  justify-content: center;
}
.dateWrap button {
  font-size: 16px;
}

.addAccount{
  font-size: 16px;
}